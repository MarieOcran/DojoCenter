@model ActivityCenter
<style>
    .card{
        border: outset 2px white;
        border-radius: 10px;
    }
    .card-header{
        
        border-radius: 10px;
    }
</style>

<div class="card">
    <div class="card-header bg-primary display-4 text-white text-center">Change Of Plans</div>
    <div class="card-body ">
        <form action="/activity/@Model.ActivityId/update" method="post" class="was-validated">
        <div class="row">
                <div class="col-md-6">
                    <div class="form-group row ml-5">
                        <label for="">Title:</label>
                        <div class="col-sm-8 ">
                        <input asp-for="Title" class="form-control btn-outline-warning" required/>
                        <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                    </div>
                    <div class="form-group row ml-5">
                        <label for="">Date:</label>
                        <div class="col-sm-8">
                        <input asp-for="Date" class="form-control btn-outline-warning" required/>
                        <span class="text-danger" asp-validation-for="Date"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label for="">Time:</label>
                        <div class="col-sm-8 ml-4">
                            <input asp-for="Time" class="form-control btn-outline-warning" required/>
                            <span class="text-danger" asp-validation-for="Time"></span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <label for="">Duration:</label>
                        <div class="col-sm-4">
                        <input asp-for="Duration" class="form-control btn-outline-warnig" required/>
                        </div>
                        <div class="col-sm-4">
                        <select class="form-control btn-outline-warning" name="" id="" required>
                            <option></option>
                            <option>Minutes</option>
                            <option>Hours</option>
                        </select>
                        </div>
                        <span class="text-danger" asp-validation-for="Duration"></span>
                    </div>
                </div>
                <div class="col-md-6 container-fluid">
                 <div class="form-group row">
                        <label for="">Description:</label>
                        <div class="col-sm-12">
                        <textarea asp-for="Description" rows="5" class="form-control btn-outline-warning" required></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                </div>

                </div>
            </div>
            <input type="submit" class="btn btn-outline-success container" value="Update">
        </form>
    </div>
</div>